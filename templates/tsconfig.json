{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "paths": {
        "*": ["./src/@types/*"]
      },
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./node_modules/@types", "./src/@types"]
    },
    "include": ["src/**/*", "src/@types/**/*", "src/config/**/*"],
    "exclude": ["node_modules"]
  }